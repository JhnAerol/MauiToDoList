<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiToDoList.Views.TaskListPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:MauiToDoList.Models"
    xmlns:vm="clr-namespace:MauiToDoList.ViewModels"
    Title="TaskListPage"
    x:DataType="vm:TaskListPageViewModel"
    Shell.NavBarIsVisible="False">

    <Grid RowDefinitions=".09*, .06*, .78*, .07*">
        <Frame Padding="10" BackgroundColor="Black">
            <HorizontalStackLayout HorizontalOptions="Start" Spacing="10">
                <Image
                    HeightRequest="30"
                    Source="todolist.png"
                    WidthRequest="30" />

                <Label
                    FontSize="30"
                    HorizontalTextAlignment="Center"
                    Text="TASK LIST"
                    TextColor="White" />

                <Image
                    Margin="130,0,0,0"
                    HeightRequest="40"
                    Source="archive.png"
                    WidthRequest="40" />
            </HorizontalStackLayout>
        </Frame>

        <Grid
            Grid.Row="1"
            Padding="0,10,0,0"
            ColumnDefinitions="Auto, Auto, Auto"
            ColumnSpacing="15"
            HorizontalOptions="Center">
            <Frame
                Padding="7,5"
                BackgroundColor="Black"
                CornerRadius="50"
                WidthRequest="100">
                <Label
                    FontSize="18"
                    Text="COMPLETED"
                    TextColor="White" />
            </Frame>

            <Frame
                Grid.Column="1"
                Padding="8,4"
                BackgroundColor="Black"
                CornerRadius="50"
                WidthRequest="100">
                <HorizontalStackLayout HorizontalOptions="Center">
                    <Label
                        FontSize="20"
                        HorizontalTextAlignment="Center"
                        Text="TO DO"
                        TextColor="White" />
                </HorizontalStackLayout>
            </Frame>

            <Frame
                Grid.Column="2"
                Padding="8,5"
                BackgroundColor="Black"
                CornerRadius="50"
                WidthRequest="100">
                <HorizontalStackLayout HorizontalOptions="Center">
                    <Label
                        FontSize="18"
                        HorizontalTextAlignment="Center"
                        Text="IMPORTANT"
                        TextColor="White" />
                </HorizontalStackLayout>
            </Frame>
        </Grid>



        <CollectionView
            Grid.Row="2"
            ItemsSource="{Binding Tasks}"
            SelectionMode="None">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:TaskItems">
                    <Frame
                        Margin="10"
                        Padding="15"
                        BorderColor="Black"
                        CornerRadius="20">

                        <VerticalStackLayout Spacing="10">

                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                                <Image HeightRequest="20" Source="task.png" />

                                <Label
                                    Grid.Column="1"
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    Text="{Binding TaskName}" />

                                <Image
                                    Grid.Column="2"
                                    Source="dots.png"
                                    WidthRequest="20">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OpenOption" />
                                    </Image.GestureRecognizers>

                                </Image>
                            </Grid>

                            <HorizontalStackLayout Spacing="8">
                                <Image HeightRequest="10" Source="{Binding ImageUrl}" />

                                <Label FontAttributes="Bold" Text="{Binding Status}" />
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Spacing="6">
                                <Image HeightRequest="15" Source="calendar.png" />

                                <Label FontSize="12" Text="{Binding DateCreated, StringFormat='{0:MM-d-yyyy h:mm tt}'}" />
                            </HorizontalStackLayout>

                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

        <Grid
            x:Name="addTaskOverlay"
            Grid.Row="1"
            Grid.RowSpan="2"
            BackgroundColor="#80000000"
            IsVisible="False">

            <Border
                x:Name="addTaskContent"
                Padding="30"
                BackgroundColor="White"
                HorizontalOptions="Center"
                MaximumHeightRequest="350"
                Stroke="Black"
                StrokeThickness="4"
                VerticalOptions="Center"
                WidthRequest="320">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow
                        Brush="Black"
                        Opacity="0.4"
                        Radius="15"
                        Offset="0,8" />
                </Border.Shadow>

                <VerticalStackLayout Spacing="20">
                    <Label
                        FontAttributes="Bold"
                        FontSize="22"
                        HorizontalTextAlignment="Center"
                        Text="Add Task"
                        TextColor="#333333" />

                    <Entry
                        x:Name="txtAddTask"
                        HorizontalTextAlignment="Center"
                        Placeholder="Input your task here..."
                        Text="{Binding Tasknames}" />

                    <Button
                        BackgroundColor="Black"
                        BorderWidth="2"
                        Clicked="CancelButton"
                        Command="{Binding AddTaskCommand}"
                        CornerRadius="12"
                        FontAttributes="Bold"
                        FontSize="18"
                        HeightRequest="50"
                        Text="CONFIRM"
                        TextColor="White" />

                    <Button
                        BackgroundColor="Transparent"
                        BorderColor="#CCCCCC"
                        BorderWidth="2"
                        Clicked="CancelButton"
                        CornerRadius="12"
                        FontAttributes="Bold"
                        FontSize="16"
                        HeightRequest="50"
                        Text="CANCEL"
                        TextColor="#666666" />
                </VerticalStackLayout>
            </Border>
        </Grid>

        <Grid
            x:Name="optionOverlay"
            Grid.Row="1"
            Grid.RowSpan="2"
            BackgroundColor="#80000000"
            IsVisible="False">

            <Border
                x:Name="optionContent"
                Padding="30"
                BackgroundColor="White"
                HorizontalOptions="Center"
                MaximumHeightRequest="350"
                Stroke="Black"
                StrokeThickness="4"
                VerticalOptions="Center"
                WidthRequest="320">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow
                        Brush="Black"
                        Opacity="0.4"
                        Radius="15"
                        Offset="0,8" />
                </Border.Shadow>

                <VerticalStackLayout>

                    <Label
                        FontSize="20"
                        HorizontalOptions="Center"
                        Text="UPDATE">

                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="UpdateButton" />
                        </Label.GestureRecognizers>

                    </Label>

                    <BoxView
                        Margin="50,5"
                        BackgroundColor="#E0E0E0"
                        HeightRequest="2" />

                    <Label
                        FontSize="20"
                        HorizontalOptions="Center"
                        Text="DELETE">

                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="DeleteButton" />
                        </Label.GestureRecognizers>

                    </Label>

                    <Button
                        Margin="0,20,0,0"
                        BackgroundColor="Black"
                        BorderColor="#CCCCCC"
                        BorderWidth="2"
                        Clicked="CancelButton"
                        CornerRadius="12"
                        FontAttributes="Bold"
                        FontSize="16"
                        HeightRequest="50"
                        Text="CANCEL"
                        TextColor="White" />
                </VerticalStackLayout>

            </Border>

        </Grid>

        <Grid
            x:Name="updateOverlay"
            Grid.Row="1"
            Grid.RowSpan="2"
            BackgroundColor="#80000000"
            IsVisible="False">

            <Border
                x:Name="updateContent"
                Padding="30"
                BackgroundColor="White"
                HorizontalOptions="Center"
                MaximumHeightRequest="500"
                Stroke="Black"
                StrokeThickness="4"
                VerticalOptions="Center"
                WidthRequest="320">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow
                        Brush="Black"
                        Opacity="0.4"
                        Radius="15"
                        Offset="0,8" />
                </Border.Shadow>

                <VerticalStackLayout Spacing="20">
                    <Label
                        FontAttributes="Bold"
                        FontSize="22"
                        HorizontalTextAlignment="Center"
                        Text="update Task"
                        TextColor="#333333" />

                    <Entry
                        x:Name="txtUpdateTask"
                        HorizontalTextAlignment="Center"
                        Placeholder="Input your task here..."
                        Text="{Binding Tasknames}" />

                    <Label FontSize="17" Text="Status:" />

                    <Grid
                        Grid.Row="1"
                        Padding="0,10,0,0"
                        ColumnDefinitions="Auto, Auto"
                        ColumnSpacing="15"
                        HorizontalOptions="Center"
                        RowDefinitions="*,*"
                        RowSpacing="10"
                        VerticalOptions="Center">
                        <Frame
                            Padding="7,5"
                            BackgroundColor="Black"
                            CornerRadius="50"
                            WidthRequest="100">
                            <Label
                                FontSize="18"
                                Text="COMPLETED"
                                TextColor="White" />
                        </Frame>

                        <Frame
                            Grid.Column="1"
                            Padding="8,4"
                            BackgroundColor="Black"
                            CornerRadius="50"
                            WidthRequest="100">
                            <HorizontalStackLayout HorizontalOptions="Center">
                                <Label
                                    FontSize="20"
                                    HorizontalTextAlignment="Center"
                                    Text="TO DO"
                                    TextColor="White" />
                            </HorizontalStackLayout>
                        </Frame>

                        <Frame
                            Grid.Row="1"
                            Grid.ColumnSpan="2"
                            Padding="8,5"
                            BackgroundColor="Black"
                            CornerRadius="50"
                            WidthRequest="100">
                            <HorizontalStackLayout HorizontalOptions="Center">
                                <Label
                                    FontSize="18"
                                    HorizontalTextAlignment="Center"
                                    Text="IMPORTANT"
                                    TextColor="White" />
                            </HorizontalStackLayout>
                        </Frame>
                    </Grid>

                    <Button
                        BackgroundColor="Black"
                        BorderWidth="2"
                        Clicked="CancelButton"
                        CornerRadius="12"
                        FontAttributes="Bold"
                        FontSize="18"
                        HeightRequest="50"
                        Text="CONFIRM"
                        TextColor="White" />

                    <Button
                        BackgroundColor="Transparent"
                        BorderColor="#CCCCCC"
                        BorderWidth="2"
                        Clicked="CancelButton"
                        CornerRadius="12"
                        FontAttributes="Bold"
                        FontSize="16"
                        HeightRequest="50"
                        Text="CANCEL"
                        TextColor="#666666" />
                </VerticalStackLayout>
            </Border>
        </Grid>

        <Grid
            x:Name="noTaskOverlay"
            Grid.Row="2"
            IsVisible="True">

            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                <Label
                    FontSize="30"
                    Text="No Task "
                    TextColor="#AAAAAA" />
            </VerticalStackLayout>

        </Grid>

        <Grid Grid.Row="3" BackgroundColor="Black">
            <HorizontalStackLayout HorizontalOptions="Center">
                <ImageButton
                    Clicked="ImageButton_Clicked"
                    HeightRequest="50"
                    Source="plus.png"
                    WidthRequest="45" />
            </HorizontalStackLayout>
        </Grid>


    </Grid>

</ContentPage>